[user]
    name = Justin Southworth
    email = justin_southworth@taylor.edu
[core]
    editor = vim
    # TODO: Change to proper file location per platform
    excludesfile = ~/.gitignore_global
    whitespace = tabwidth=4
[alias]
    co = checkout
    br = branch
    ci = commit
    s = status
    st = status
    sta = status --long
    stat = status --long
    unstage = reset HEAD --
    last = log -1 HEAD
    delete = push origin --delete
    hist = log --graph --decorate=short --date=relative --pretty=format:\"%C(auto)%h%d %s %C(red)|%C(green) By: %aN %ad\"
    hist1 = log --pretty=format:\"%C(auto)%h %ad %C(red)|%C(white) %s%d %C(green)[%an]\" --graph --date=short
    #hist-basic = log --graph --decorate --pretty=oneline --abbrev-commit
    praise = blame
    staged = diff --cached
    unstaged = diff
    both = diff HEAD
    amend = commit --amend
    tree = log --graph --decorate --pretty=oneline --abbrev-commit --all
    myhist = !git log --author=$(git config user.email) --format=%H |xargs git show --name-only --format=-------------%n%Cred%s%Creset%n%Cblue%h%Creset
[format]
    numbered = auto
[fetch]
    default = upstream
[push]
    default = upstream
[pull]
    default = upstream
[color]
    ui = true
[help]
    autocorrect = 8
[merge]
    tool = vimdiff
    conflictstyle = diff3
[status]
    short = 1 # Override with --long
[credential]
    helper = cache --timeout=3600

