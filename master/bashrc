###### HISTORY ######
# Append to history
shopt -s histappend
# Force commands to one line
shopt -s cmdhist
HISTFILESIZE=1000000000
HISTSIZE=1000000000
# HISTCONTROL=ignoreboth
HISTCONTROL=ignoredups:erasedups
